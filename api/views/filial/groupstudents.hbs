
<div class="d-flex">
  <a href="/filial/" class="mr-2"><i class="fas fa-arrow-left mr-2"></i></a>
  <h5 class="card-title ml-2">{{group.course.title}} | {{group.typegroup.title}}</h5>
</div>
<div class="row">
  <div class="col">
      <div class="card">
          <div class="card-body">
              <h5 class="card-title">Список студентов</h5>
              <table class="table table-hover">
                <thead>
              <tr>
                <th scope="col">Имя и фамилия</th>
                <th scope="col">Номер телефона</th>

              </tr>
            </thead>
            <tbody>
                {{#each group.pupils}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{phone}}</td>
                </tr>
                {{/each}}
            </tbody>
            </table>
          </div>
      </div>
  </div>
</div>